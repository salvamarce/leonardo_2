<?xml version="1.0"?>

<robot name="roomba" xmlns:xacro="http://ros.org/wiki/xacro">

   <link name="world" />	
	
	<joint name="fixed" type="floating">
		<origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    	<parent link="world"/>
    	<child link="my_roomba"/>
  	</joint>

   <link name="my_roomba">
      <inertial>
         <origin xyz="0 0 0" />
         <mass value="1.0" />
         <inertia  ixx="0.1" ixy="0.0"  ixz="0.0"  iyy="0.1"  iyz="0.0"  izz="0.1" />
      </inertial>
      <visual>
         <origin xyz="0 0 0.0"/>
         <geometry>
            <cylinder length="0.10" radius="0.2" />
         </geometry>
      </visual>
      <collision>
         <origin xyz="0 0 0.0"/>
         <geometry>
            <cylinder length="0.11" radius="0.22" />
         </geometry>
      </collision>
   </link>

   <joint name="aruco_bg_joint" type="fixed">
      <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0" />
      <parent link="my_roomba" />
      <child link="intruso_bg" />
   </joint>

   <link name="intruso_bg">
      <visual>
         <geometry>
            <box size="0.25 0.25 0.01" />
         </geometry>
      </visual>
      <inertial>
         <origin xyz="0 0 0" /> 
         <mass value="0.01" />
         <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
      </inertial>
      <collision>
         <origin xyz="0 0 0.0"/>
         <geometry>
            <box size="0.22 0.22 0.01" />
         </geometry>
      </collision>
   </link> 

   <joint name="aruco_joint" type="fixed">
      <origin xyz="0.0 0.0 0.01" rpy="0.0 0.0 0.0" />
      <parent link="intruso_bg" />
      <child link="intruso" />
   </joint>

   <link name="intruso">
      <visual>
         <geometry>
            <box size="0.19 0.19 0.01" />
         </geometry>
      </visual>
      <inertial>
         <origin xyz="0 0 0" /> 
         <mass value="0.01" />
         <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
      </inertial>
      <collision>
         <origin xyz="0 0 0.0"/>
         <geometry>
            <box size="0.18 0.18 0.01" />
         </geometry>
      </collision>
   </link> 


   <gazebo reference="intruso">
      <material>roomba/intruso</material>
   </gazebo>
   <gazebo reference="intruso_bg">
      <material>Gazebo/WHITE</material>
   </gazebo>
   <gazebo reference="my_roomba">
      <material>Gazebo/BLUE</material>
   </gazebo>

</robot>